@model Octavados.ViewModels.CriarClienteVM

@{
    ViewData["Title"] = "Criar Novo Cliente";
}

<div>
    <h2>
        <i class="fa-solid fa-circle-plus"></i>
        @ViewData["Title"]
    </h2>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Criar" method="post">

    <div class="form-group mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CPF"></label>
        <input asp-for="CPF" class="form-control" />
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Endereco"></label>
        <textarea asp-for="Endereco" class="form-control"></textarea>
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end mt-3">
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa-solid fa-arrow-left"></i>
            Voltar
        </a>

        <button type="submit" class="btn btn-primary ms-2">
            <i class="fa-regular fa-circle-check"></i>
            Salvar
        </button>
    </div>
</form>
