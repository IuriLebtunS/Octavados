@model Octavados.ViewModels.CriarEstoqueVM

@{
    ViewData["Title"] = "Novo Estoque";
}

<h1>
    <i class="fa-solid fa-circle-plus"></i>
    @ViewData["Title"]
</h1>
<hr>

<form asp-action="Criar">

    <div class='mb-3'>
        <label class='form-label' asp-for="NomeProduto"></label>
        <input class='form-control' asp-for="NomeProduto">
        <span asp-validation-for="NomeProduto" class='text-danger'></span>
    </div>

    <div class='mb-3'>
        <label class='form-label' asp-for="DataChegada"></label>
        <input class='form-control' asp-for="DataChegada">
        <span asp-validation-for="DataChegada" class='text-danger'></span>
    </div>

    <div class='mb-3'>
        <label class='form-label' asp-for="Quantidade"></label>
        <input class='form-control' asp-for="Quantidade">
        <span asp-validation-for="Quantidade" class='text-danger'></span>
    </div>


    <div class='d-flex justify-content-end'>
        <a class='btn btn-secondary' asp-action="Index">
            <i class="fa-solid fa-arrow-left"></i>
            Cancelar
        </a>

        <button type='submit' class='btn btn-primary ms-2'>
            <i class="fa-regular fa-circle-check"></i>
            Salvar Estoque
        </button>
    </div>

</form>
