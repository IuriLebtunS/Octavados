@model Octavados.ViewModels.EditarEstoqueVM

@{
    ViewData["Title"] = "Atualizar Estoque";
}

<h1>
    <i class="fa-solid fa-edit"></i>
    @ViewData["Title"]
</h1>

<hr>

<form asp-action="Editar" method="post">

    <div class="form-group mb-2">
        <label asp-for="NomeProduto"></label>
        <input asp-for="NomeProduto" class="form-control" />
        <span asp-validation-for="NomeProduto" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Quantidade"></label>
        <input asp-for="Quantidade" class="form-control" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="DataAtualizacao"></label>
        <input asp-for="DataAtualizacao" class="form-control" readonly />
        <span asp-validation-for="DataAtualizacao" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group mb-2">
        <label asp-for="QuantidadeAdicionada"></label>
        <span class="font-weight-bold">
            @Model.QuantidadeAdicionada
        </span>
    </div>
    <br />

    <div class='d-flex justify-content-end'>
        <a class='btn btn-secondary' asp-action="Index">
            <i class="fa-solid fa-arrow-left"></i>
            Voltar
        </a>

        <button type='submit' class='btn btn-primary ms-2'>
            <i class="fa-regular fa-circle-check"></i>
            Atualizar Estoque
        </button>
    </div>
</form>