@model List<App.ViewModels.UsuarioVM>

@{
    ViewData["Title"] = "Usuários";
}

<div class='d-flex'>
    <h1>
        <i class="fa-solid fa-users"></i>
        @ViewData["Title"]
    </h1>

    <div class='ms-auto'>
        <a asp-action="Criar" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Novo Usuário
        </a>
    </div>
</div>
<hr>


<div class="list-group">
    @if (Model.Any())
    {
        @foreach (var usuario in Model)
        {
            <a class="list-group-item list-group-item-action" asp-action="Editar" asp-route-id="@usuario.Id">
                @usuario.Email - @(usuario.Ativo ? "Ativo" : "Inativo")
            </a>

        }
    }
</div>
