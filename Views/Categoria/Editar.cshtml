@model Octavados.ViewModels.EditarCategoriaVM

@{
    ViewData["Title"] = "Editar Categoria";
}

<h1>
    <i class="fa-solid fa-edit"></i>
    @ViewData["Title"]
</h1>

<hr>

<form asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class='mb-3'>
        <label class='form-label' asp-for="Nome"></label>
        <input class='form-control' asp-for="Nome">
        <span asp-validation-for="Nome" class='text-danger'></span>
    </div>

    <div class='mb-3 form-check'>
        <input class='form-check-input' type='checkbox' asp-for="Ativo">
        <label class='form-check-label' asp-for="Ativo">Ativo</label>
    </div>

    <div class='d-flex justify-content-end'>
        <a class='btn btn-secondary' asp-action="Index">
            <i class="fa-solid fa-arrow-left"></i>
            Cancelar
        </a>

        <button type='submit' class='btn btn-primary ms-2'>
            <i class="fa-regular fa-circle-check"></i>
            Atualizar Categoria
        </button>
    </div>

</form>
