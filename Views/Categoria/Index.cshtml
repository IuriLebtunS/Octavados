@model List<Octavados.ViewModels.IndexCategoriaVM>

<h1>Categorias</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@categoria.Id">Editar</a> |
                    <a asp-action="Detalhes" asp-route-id="@categoria.Id">Detalhes</a> |
                    <a asp-action="Excluir" asp-route-id="@categoria.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
