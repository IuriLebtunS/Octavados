@model Octavados.ViewModels.ProdutoVendaViewModel

@{
    ViewData["Title"] = "Adicionar Produtos à Venda";
}

<div>
    <h2>
        <i class="fa-solid fa-cart-plus"></i>
        @ViewData["Title"]
    </h2>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AdicionarProdutos" method="post">

    <input type="hidden" name="VendaId" value="@Model.VendaId" />

    <div class="form-group mb-3">
        <label for="ProdutoId" class="form-label">Produto</label>
        <select asp-for="ProdutoId" asp-items="@(ViewData["Produtos"] as SelectList)" class="form-control">
            <option value="">Selecione um Produto</option>
        </select>
        <span asp-validation-for="ProdutoId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Quantidade" class="form-label">Quantidade</label>
        <input asp-for="Quantidade" class="form-control" type="number" min="1" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="PrecoUnitario" class="form-label">Preço Unitário</label>
        <input asp-for="PrecoUnitario" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Desconto" class="form-label">Desconto</label>
        <input asp-for="Desconto" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Desconto" class="text-danger"></span>
    </div>

    <input type="hidden" name="vendaId" value="@Model.VendaId" />

    <div class="text-end">
        <button type="submit" class="btn btn-secondary">
            <i class="fa-solid fa-plus"></i> Adicionar Produto
        </button>
    </div>
</form>
