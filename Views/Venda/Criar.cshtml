@model Octavados.ViewModels.CriarVendaViewModel

@{
    ViewData["Title"] = "Criar Nova Venda";
}

<div>
    <h2>
        <i class="fa-solid fa-circle-plus"></i>
        @ViewData["Title"]
    </h2>
</div>

<div asp-validation-summary="All"></div>

<form asp-action="Criar" method="post">

    <!-- Campo Cliente -->
    <div class="form-group mb-3">
        <label asp-for="ClienteId" class="control-label"></label>
        <select asp-for="ClienteId" asp-items="@(ViewData["Clientes"] as SelectList)" class="form-control">
            <option value="">Selecione um Cliente</option>
        </select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <!-- Campo DataVenda -->
    <div class="form-group mb-3">
        <label asp-for="DataVenda" class="control-label"></label>
        <input asp-for="DataVenda" class="form-control" type="date" />
        <span asp-validation-for="DataVenda" class="text-danger"></span>
    </div>

    <!-- Campo ValorDoFrete -->
    <div class="form-group mb-3">
        <label asp-for="ValorDoFrete" class="control-label"></label>
        <input asp-for="ValorDoFrete" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="ValorDoFrete" class="text-danger"></span>
    </div>

    <!-- Produtos de Venda -->
    <div id="produtos-venda" class="form-group mb-3">
        <label>Produtos</label>
        <div id="produtos-container">
            @for (var i = 0; i < Model.ProdutosVenda.Count; i++)
            {
                <div class="produto-item">
                    <div class="row mb-2">
                        <!-- Campo Produto -->
                        <div class="col">
                            <label asp-for="@Model.ProdutosVenda[i].ProdutoId">Produto</label>
                            <select asp-for="@Model.ProdutosVenda[i].ProdutoId"
                                    asp-items="@(new SelectList(ViewData["Produtos"] as List<Produto>, "Id", "Nome", Model.ProdutosVenda[i].ProdutoId))"
                                    class="form-control">
                                <option value="">Selecione um Produto</option>
                            </select>
                        </div>

                        <!-- Campo Quantidade -->
                        <div class="col">
                            <label asp-for="@Model.ProdutosVenda[i].Quantidade">Quantidade</label>
                            <input asp-for="@Model.ProdutosVenda[i].Quantidade" class="form-control" type="number"
                                   min="1" />
                        </div>

                        <!-- Campo Preço Unitário -->
                        <div class="col">
                            <label asp-for="@Model.ProdutosVenda[i].PrecoUnitario">Preço Unitário</label>
                            <input asp-for="@Model.ProdutosVenda[i].PrecoUnitario" class="form-control" type="number"
                                   step="0.01" />
                        </div>

                        <!-- Campo Desconto -->
                        <div class="col">
                            <label asp-for="@Model.ProdutosVenda[i].Desconto">Desconto</label>
                            <input asp-for="@Model.ProdutosVenda[i].Desconto" class="form-control" type="number"
                                   step="0.01" />
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Novo Produto -->
        <div class="form-group mb-3">
            <label>Adicionar Novo Produto</label>
            <div class="row">
                <div class="col">
                    <select name="ProdutosVenda[NewProduto].ProdutoId" class="form-control">
                        <option value="">Selecione um Produto</option>
                        @foreach (var produto in (ViewData["Produtos"] as List<Produto>))
                        {
                            <option value="@produto.Id">@produto.Nome</option>
                        }
                    </select>
                </div>
                <div class="col">
                    <input type="number" name="ProdutosVenda[NewProduto].Quantidade" class="form-control" min="1"
                           placeholder="Quantidade" />
                </div>
                <div class="col">
                    <input type="number" name="ProdutosVenda[NewProduto].PrecoUnitario" class="form-control" step="0.01"
                           placeholder="Preço Unitário" />
                </div>
                <div class="col">
                    <input type="number" name="ProdutosVenda[NewProduto].Desconto" class="form-control" step="0.01"
                           placeholder="Desconto" />
                </div>
            </div>
        </div>

    </div>

    <div class="d-flex justify-content-end mt-3">
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa-solid fa-arrow-left"></i>
            Voltar
        </a>

        <button type="submit" class="btn btn-primary ms-2">
            <i class="fa-regular fa-circle-check"></i>
            Salvar
        </button>
    </div>

</form>
