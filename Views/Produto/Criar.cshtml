@model Octavados.ViewModels.CriarProdutoVM

@{
    ViewData["Title"] = "Criar Novo Produto";
}
<div>
    <h2>
        <i class="fa-solid fa-circle-plus"></i>
        @ViewData["Title"]
    </h2>

</div>

<div asp-validation-summary="All"></div>

<form asp-action="Criar" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Marca"></label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagemUrl"></label>
        <input asp-for="ImagemUrl" class="form-control" />
        <span asp-validation-for="ImagemUrl" class="text-danger"></span>
        <small class="form-text text-muted">Insira o URL da imagem.</small>
    </div>
    <br>

    <div class="form-group">
        <label asp-for="CategoriaId" class="control-label"></label>
        <select asp-for="CategoriaId" asp-items="@(ViewData["Categorias"] as SelectList)" class="form-control"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
    <br>

    <div class="form-group">
        <label asp-for="Quantidade"></label>
        <input asp-for="Quantidade" class="form-control" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
        <small class="form-text text-muted">Informe a quantidade inicial de estoque.</small>
    </div>
    <br>

    <div class="d-flex justify-content-end mt-3">
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa-solid fa-arrow-left"></i>
            Voltar
        </a>

        <button type="submit" class="btn btn-primary ms-2">
            <i class="fa-regular fa-circle-check"></i>
            Salvar
        </button>
    </div>
</form>
