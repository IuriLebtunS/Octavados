@model Octavados.ViewModels.CriarProdutoVM

@{
    ViewData["Title"] = "Criar Novo Produto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Criar" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Marca"></label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuantidadeEmEstoque"></label>
        <input asp-for="QuantidadeEmEstoque" class="form-control" />
        <span asp-validation-for="QuantidadeEmEstoque" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Imagem"></label>
        <input asp-for="Imagem" type="file" class="form-control" />
        <span asp-validation-for="Imagem" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaNome"></label>
        <input asp-for="CategoriaNome" class="form-control" />
        <span asp-validation-for="CategoriaNome" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<a asp-action="Index">Voltar para a lista de produtos</a>
