@model IEnumerable<Octavados.ViewModels.IndexDeProdutosVM>

@{
    ViewData["Title"] = "Produtos";
}

<div class="d-flex justify-content-between">
    <h2>
        <i class="fas fa-boxes-stacked"></i>
        @ViewData["Title"]
    </h2>

    <div class='ms-auto'>
        <a asp-action="Criar" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Nova
        </a>
    </div>
</div>
<br>



<div class="list-group">
    @if (Model.Any())
    {
        foreach (var produto in Model)
        {
            <a class="list-group-item list-group-item-action" asp-action="Editar" asp-route-id="@produto.ProdutoId">
                <div class="row">
                    <div class="col-1 col-auto me-auto border-end text-center d-flex align-items-center justify-content-center"
                        style="color: black;">
                        <div>
                            <span style="font-weight: bold;">@produto.ProdutoId.ToString("0000")</span><br>
                        </div>
                    </div>
                    <div class="col-md-10" style="font-weight: bold;">
                        <strong>@produto.Nome</strong><br>
                        <span style="font-weight: bold;">Pre√ßo: @produto.Preco - Marca: @produto.Marca</span><br>
                        <span>Categoria: @(produto.CategoriaNome ?? "N/A")</span>
                    </div>
                </div>
            </a>
        }
    }
    else
    {
        <div class="d-flex justify-content-between">

            <h2>
                <i class="fa-solid fa-ghost"></i>
                Nenhum produto cadastrado.
            </h2>

        </div>

    }
</div>
