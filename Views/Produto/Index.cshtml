@model IEnumerable<Octavados.ViewModels.ProdutoVM>

@{
    ViewData["Title"] = "Produtos";
}

<div class="list-group" show-if='Model.Any()'>
    @foreach (var produto in Model)
    {
        <a class="list-group-item list-group-item-action" asp-action="Detalhes" asp-route-id="@produto.Id">
            <div class="row">
                <div class="col-1 col-auto me-auto border-end text-center d-flex align-items-center justify-content-center" style="color: black;">
                    <div>
                        <span style="font-weight: bold;">@produto.Id.ToString("0000")</span><br>
                    </div>
                </div>
                <div class="col-md-10" style="font-weight: bold;">
                    <strong>@produto.Nome</strong><br>
                    <span style="font-weight: bold;">Pre√ßo: @produto.Preco - Marca: @produto.Marca</span><br>
                    <span>Quantidade em Estoque: @produto.QuantidadeEmEstoque</span><br>
                    <span>Categoria: @produto.Nome</span>
                </div>
            </div>
        </a>
    }
</div>
